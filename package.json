{
  "name": "ephemeral",
  "version": "1.0.0",
  "description": "Generative visual app inspired by Brian Eno",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "start": "npm run dev"
  },
  "keywords": [
    "generative",
    "art",
    "music",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "p5": "^2.0.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-p5": "^1.4.1",
    "tone": "^15.1.22"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "vite": "^5.4.11"
  },
  "build": {
    "appId": "com.ephemeral.app",
    "productName": "Ephemeral",
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
